# cook your dish here
try:
    t=int(input())
    for i in range(t):
        a,b,c=map(int,input().split(" "))
        m = (a+b)*4
        n= b*4
        
        if (2*b < a):
            n = m - 2*n

        if (c % 4 != 0 or n > c or m < c):
            print("no")
        else:
            print("yes")
    
except EOFError:
    pass
